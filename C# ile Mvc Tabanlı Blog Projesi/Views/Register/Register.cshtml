@model EntityLayer.Concrete.Writer
@{
    Layout = null;
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>YENİ ADMİN EKLEME SAYFASI</h1>
@using (Html.BeginForm("Register", "Register", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label(" Kullanıcı Adı")
        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })

        <br /><br />
        @Html.Label("Mail  Yazınız")
        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Şifreyi Yazınız")
        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Status Yazınız")
        @Html.TextBoxFor(x => x.WriterStatus, new { @class = "form-control" })


        <br /><br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}
